<config xmlns='http://www.ehcache.org/v3'>

    <!-- 默认的hibernate缓存配置 -->
    <cache alias="default-update-timestamps-region">
        <expiry>
            <none/>
        </expiry>
        <heap>10000</heap>
    </cache>

    <!-- 默认的hibernate查询结果缓存配置 -->
    <cache alias="default-query-results-region">
        <expiry>
            <none/>
        </expiry>
        <heap>10000</heap>
    </cache>

    <!-- entity缓存配置模板 程序自己会管理缓存的生效和失效 这里只配置一个保底，时机上没有太大的意义 -->
    <cache-template name="entity">
        <heap>500000</heap>
    </cache-template>

    <cache alias="org.wyf.game.logic.database.entity.PlayerInfo" uses-template="entity"/>
    <cache alias="org.wyf.game.logic.database.entity.BagInfo" uses-template="entity"/>
    <cache alias="org.wyf.game.logic.database.entity.BagItem" uses-template="entity"/>
    <cache alias="org.wyf.game.logic.database.entity.FunctionInfo" uses-template="entity"/>
    <cache alias="org.wyf.game.logic.database.entity.CycleFunction" uses-template="entity"/>
    <cache alias="org.wyf.game.logic.database.entity.TaskInfo" uses-template="entity"/>
    <cache alias="org.wyf.game.logic.database.entity.DbTask" uses-template="entity"/>
</config>